<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="0dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginVertical="29dp"
        android:layout_marginStart="29dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/bankimg"
                android:layout_width="13dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/lets_icons_home_fill" />

            <TextView
                android:id="@+id/bankName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="SBI Bidhannagar Durgapur"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                tools:ignore="MissingConstraints" />

        </LinearLayout>

        <TextView
            android:id="@+id/bankAddress"
            android:layout_width="169dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:text="Sahid sukumar banerjee sarani,durgapur 713212 "
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/availability_status"
            android:layout_width="123dp"
            android:layout_height="44dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/cash_availabe" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="119dp"
            android:layout_height="139dp"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:srcCompat="@drawable/bk_img" />

        <ImageButton
            android:id="@+id/btn_avail"
            android:layout_width="109dp"
            android:layout_height="28dp"
            android:layout_gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="-25dp"
            android:background="@android:color/transparent"
            android:backgroundTint="#ED7F7F"
            android:scaleType="fitCenter"
            android:onClick="onAvailClick"
            app:layout_anchorGravity="bottom|center"
            app:srcCompat="@drawable/btn_available"
            tools:ignore="MissingConstraints" />
    </LinearLayout>


</androidx.cardview.widget.CardView>
